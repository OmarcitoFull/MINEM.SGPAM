@model IEnumerable<Minem.Sgpam.TransporteDatos.DtoEntidades.Comp_ReaproDTO>

<div class="x_titleGrupo">
    <div align="center" class="titulo-m">
    </div>

    <ul class="nav navbar-right panel_toolbox">
        <li>
            <div class="boton">
                <a href="#" data-toggle="modal" data-target="#modal21" onclick="ShowModal('@Url.Action("CrearReaprovechamiento", "RegistrarPAM")', 'fullReaprovechamiento')">Agregar  <i class="fa fa-plus"></i></a>
            </div>
        </li>
    </ul>
    <div class="clearfix"></div>
</div>
<div class="clearfix"></div>
<div class="table-responsive">
    <table id="fulltbl15" class="table table-striped jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th class="column-title">Número de Expediente</th>
                <th class="column-title">Fecha Expediente</th>
                <th class="column-title"> Resolución de Reaprovechamiento</th>
                <th class="column-title">Fecha de Resolución </th>
                <th class="column-title">Titular </th>
                <th class="column-title">Nombre Proyecto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd pointer">
                    <td class=" ">
                        @item.Nro_Expediente
                    </td>
                    <td class=" ">
                        @(item.Fecha_Expediente.GetValueOrDefault().ToShortDateString() == "01/01/0001" ? "" : item.Fecha_Expediente.GetValueOrDefault().ToShortDateString())
                    </td>
                    <td class=" ">
                        @item.Resolucion_Reapro
                    </td>
                    <td class=" ">
                        @(item.Fecha_Resolucion.GetValueOrDefault().ToShortDateString() == "01/01/0001" ? "" : item.Fecha_Resolucion.GetValueOrDefault().ToShortDateString())
                    </td>
                    <td class=" ">
                        @item.Titular
                    </td>
                    <td class=" ">
                        @item.Nombre_Proyecto
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>