@model Minem.Sgpam.TransporteDatos.DtoEntidades.ComponenteDTO

<div class="col-md-4 col-sm-12 col-xs-12 form-group">
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Este</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input asp-for="Este" class="form-control" max="99999999" min="-99999999" maxlength = "8" oninput="fMaxLength(this)"/>
        </div>
    </div>
</div>
<div class="col-md-4 col-sm-12 col-xs-12 form-group">
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Norte</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input asp-for="Norte" class="form-control" max="99999999" min="-99999999" maxlength = "8" oninput="fMaxLength(this)"/>
        </div>
    </div>
</div>
<div class="col-md-4 col-sm-12 col-xs-12 form-group">
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Zona</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <select id="vZona" class="select2_single form-control" asp-for="Id_Zona" asp-items="(List<SelectListItem>)ViewBag.CboZona">
                <option value="">Seleccione</option>
            </select>
            @*<input type="hidden" asp-for="Id_Zona" />*@
        </div>
    </div>
</div>
<div class="col-md-4 col-sm-12 col-xs-12 form-group">
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Datum</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <select id="vDatum" class="select2_single form-control" asp-for="Id_Datum" asp-items="(List<SelectListItem>)ViewBag.CboDatum">
                <option value="">Seleccione</option>
            </select>
            @*<input type="hidden" asp-for="Id_Datum" />*@
        </div>
    </div>
</div>
<div class="col-md-4 col-sm-12 col-xs-12 form-group">
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Ubicación</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input asp-for="Ubicacion" class="form-control" maxlength="300" />
        </div>
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 form-group">
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-2 col-xs-12">Descripción</label>
        <div class="col-md-10 col-sm-10 col-xs-12">
            <textarea class="form-controlArea" rows="3" asp-for="Descripcion" maxlength="300"></textarea>
        </div>
    </div>
</div>