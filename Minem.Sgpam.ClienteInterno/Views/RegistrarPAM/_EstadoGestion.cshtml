@model IEnumerable<Minem.Sgpam.TransporteDatos.DtoEntidades.Comp_Est_GestionDTO>

<div class="x_titleGrupo">
    <div align="center" class="titulo-m">
    </div>
    <ul class="nav navbar-right panel_toolbox">
        <li>
            <div class="boton">
                <a href="#" data-toggle="modal" data-target="#modal24" onclick="ShowModal('@Url.Action("CrearEstadoGestion", "RegistrarPAM")', 'fullEstadogestion')">Agregar  <i class="fa fa-plus"></i></a>
            </div>
        </li>
    </ul>
    <div class="clearfix"></div>
</div>

<div class="clearfix"></div>
<div class="table-responsive">
    <table id="fulltbl18" class="table table-striped jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th class="column-title">Estado de Gestión</th>
                <th class="column-title">Sustento</th>
                <th class="column-title">Fecha de Actualización</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd pointer">
                    <td class=" ">
                        @item.Descripcion
                    </td>
                    <td class=" ">
                        @item.Sustento
                    </td>
                    <td class=" ">
                        @item.Fecha.GetValueOrDefault().ToShortDateString()
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>