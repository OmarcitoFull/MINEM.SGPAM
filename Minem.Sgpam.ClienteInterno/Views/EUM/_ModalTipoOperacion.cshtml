@model Minem.Sgpam.TransporteDatos.DtoEntidades.RegistrarTipoOperacionDTO
<div class="rowGroup">
    <h1 class="grupoT">Tipo Operación</h1>

    <table id="datatable" class="table table-striped table-bordered pam">
        <thead>
            <tr class="headings">
                <th class="column-title ">ID</th>
                <th class="column-title ">Descripción Tipo Operación</th>
                <th class="column-title "></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.ListaTipoOperacion.Any())
            {
                <tr class="even pointer">
                    <td class=" " colspan="3">No existen registros</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.ListaTipoOperacion)
                {
                    <tr class="even pointer">
                        <td class=" ">@item.Id_Tipo_Operacion</td>
                        <td class=" ">@item.Descripcion</td>
                        <td style="width:60px">
                            <ul class="nav navbar-center panel_toolbox">
                                <li>
                                    <input type="checkbox" />
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


    <div class="clearfix"></div>
    <div class="x_title2">
        <div align="center" class="titulo-m">
            <input type="hidden" asp-for="Id_Eum" />
        </div>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <button type="button" class="boton" style="margin-right: 0px;" onclick="SaveTipoOperacion()">Guardar  <i class="fa fa-save" style="margin-left: 10px;"></i></button>
            </li>
            <li>
                <div class="boton" data-dismiss="modal">
                    <a href="#">Cancelar  <i class="fa fa-ban"></i></a>
                </div>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>