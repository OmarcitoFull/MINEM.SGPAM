{
  "Reports": {
    "DirectorySource": "Templates",
    "DirectoryDestination": "wwwroot\\Reports",
    "TemplatePam": "\\FullPlantillaPam.docx",
    "ReportName": "InformePAM_"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "WriteTo": [
        {
          "Name": "Console",
          "restrictedToMinimumLevel": "Information"
        },
        {
          "Name": "File",
          "Args": {
            "path": "LogWeb.txt",
            "rollingInterval": 3,
            "retainedFileCountLimit": 10
          },
          "restrictedToMinimumLevel": "Information"
        }
      ],
      "Enrich": [
        "WithMachineName",
        "WithProcessId"
      ]
    }
  },
  "BackEndConfig": {
    "UrlApi":   "http://localhost:4117/sgpam/",
    "UrlApiLF": "http://localhost:63140/LF/ServicioLF/"
  },
  "BDPAM": {
    "Zona": "10,20,30",
    "Datum": "100,200,300"
  },
  "AllowedHosts": "*",
  "DirectoryIG": "Pam\\InformacionGrafica",
  "DirectoryEA": "Pam\\EstadoAmbiental",
  "DirectoryEumIG": "Eum\\InfoGrafica",
  "DirectoryEumID": "Eum\\InfoDescargo",
  "DirectoryLnrIG": "Lnr\\InfoGrafica",
  "DirectoryLnrID": "Lnr\\InfoDocumento",


  "DirectoryLFPamIG": "INFO_GRAFICA",
  "DirectoryLFPamEA": "INFO_ESTUDIO",

  "DirectoryLFEumIG": "EUM_INFO_GRAFICA",
  "DirectoryLFEumID": "EUM_INFO_DESCARGO",

  "DirectoryLFLnrIG": "LNR_INFO_GRAFICA",
  "DirectoryLFLnrID": "LNR_INFO_DOCUMENTO"

}
